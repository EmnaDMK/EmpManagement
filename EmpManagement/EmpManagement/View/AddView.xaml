<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmpManagement.View.AddView">
    <StackLayout>
        <StackLayout Spacing="20" Padding="15">

            <Label Text="Name" TextColor="Black" FontSize="18" FontFamily="Comic Sans MS" FontAttributes="Italic"/>

            <Entry Text="{Binding Name}" FontSize="Small"  />

            <Label Text="GSM" TextColor="Black" FontSize="18" FontFamily="Comic Sans MS" FontAttributes="Italic"/>

            <Entry  Text="{Binding GSM}" FontSize="Small" Margin="0"  />


            <Button Text="Save" Command="{Binding SaveCommand}" BorderColor="Black" TextColor="White" FontSize="18" FontFamily="Comic Sans MS" FontAttributes="Italic" BackgroundColor="Black" ></Button>

        </StackLayout>

</StackLayout>

</ContentPage>